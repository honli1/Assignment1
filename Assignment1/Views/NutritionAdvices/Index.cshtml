@model IEnumerable<Assignment1.Models.NutritionAdvice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdviceTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdviceContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdviceImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdviceTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdviceContent)
        </td>
        <td>
            <img class="img-thumbnail" width="200"src="@Url.Content("~/Uploads/"+item.AdviceImage)"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
